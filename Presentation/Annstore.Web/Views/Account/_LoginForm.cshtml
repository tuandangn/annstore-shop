@model LoginModel
<form asp-action="SignIn" asp-controller="Account" asp-route-returnUrl="@ViewBag.ReturnUrl" asp-area="" method="POST" asp-antiforgery="true" novalidate>
    <div asp-validation-summary="ModelOnly" class="alert alert-warning"></div>
    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl"/>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label for="password">Mật khẩu</label>
        <input type="password" class="form-control" asp-for="Password">
        <span asp-validation-for="Password" class="form-text text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input class="form-check-input" asp-for="Remember">
        <label class="form-check-label" for="Remember">Ghi nhớ đăng nhập</label>
    </div>
    <button type="submit" class="btn btn-primary">Đăng nhập</button>
</form>